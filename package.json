{
  "name": "discord-notify",
  "version": "1.1.0",
  "description": "Modern Discord webhook notification service for Node.js. Send rich embeds, file attachments, and threaded messages with zero dependencies. Built specifically for Discord's powerful webhook capabilities.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test:all",
    "test": "ts-node scripts/test.ts",
    "test:unit": "ts-node tests/discord-notify.test.ts",
    "test:integration": "ts-node tests/integration.test.ts",
    "test:e2e": "node scripts/test-e2e.js",
    "test:all": "npm run test && npm run test:unit",
    "test:full": "npm run test:all && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit --pretty",
    "changelog": "node scripts/changelog.js",
    "changelog:generate": "npm run changelog",
    "version:patch": "npm version patch && npm run changelog:generate",
    "version:minor": "npm version minor && npm run changelog:generate",
    "version:major": "npm version major && npm run changelog:generate",
    "release:patch": "npm run version:patch && git push --tags",
    "release:minor": "npm run version:minor && git push --tags",
    "release:major": "npm run version:major && git push --tags",
    "release:interactive": "node scripts/release.js",
    "release:validate": "node -e \"require('./scripts/release.js').validateRelease()\"",
    "release:preview": "node -e \"const r = require('./scripts/release.js'); console.log(r.createReleaseNotes(r.getCurrentVersion(), 'Preview changelog entry'));\"",
    "docs": "typedoc",
    "docs:generate": "npm run docs",
    "docs:serve": "typedoc --serve",
    "docs:watch": "typedoc --watch",
    "docs:local": "node scripts/serve-docs.js"
  },
  "keywords": [
    "discord",
    "discord-webhook",
    "discord-notifications",
    "discord-notify",
    "webhook",
    "notifications",
    "notify",
    "discord-api",
    "discord-bot",
    "discord-embeds",
    "discord-threads",
    "discord-file-upload",
    "typescript",
    "nodejs",
    "node",
    "monitoring",
    "alerts",
    "logging",
    "error-reporting",
    "team-notifications",
    "ci-cd",
    "deployment-notifications",
    "system-monitoring",
    "bot-development",
    "webhook-service",
    "notification-service",
    "zero-dependencies",
    "rich-embeds",
    "file-attachments",
    "thread-support"
  ],
  "author": "Devlander Software",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Devlander-Software/discord-notify.git"
  },
  "bugs": {
    "url": "https://github.com/Devlander-Software/discord-notify/issues"
  },
  "homepage": "https://github.com/Devlander-Software/discord-notify#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Devlander-Software"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "node-fetch": "^2.7.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0",
    "typedoc-plugin-markdown": "^3.17.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
